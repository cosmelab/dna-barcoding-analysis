#!/bin/bash
# Phylogenetic Tree Only
# Builds tree from aligned sequences using IQ-TREE

set -e

INPUT_FASTA="${1:-/workspace/results/alignment/aligned_sequences.fasta}"
OUTPUT_DIR="${2:-/workspace/results/phylogeny}"

echo "Building Phylogenetic Tree..."
python /workspace/modules/03_phylogeny/build_tree.py \
    "$INPUT_FASTA" \
    "$OUTPUT_DIR"

echo ""
echo "Tree Complete! View: $OUTPUT_DIR/tree.png"
echo "For better visualization, open tree.treefile in FigTree"
