#!/bin/bash
# Quality Control Only
# Analyzes .ab1 chromatograms and generates QC report

set -e

INPUT_DIR="${1:-/workspace/data/my_sequences}"
OUTPUT_DIR="${2:-/workspace/results/qc}"

echo "Running Quality Control..."
python /workspace/modules/01_quality_control/qc_chromatograms.py \
    "$INPUT_DIR" \
    "$OUTPUT_DIR"

echo ""
echo "QC Complete! Open: $OUTPUT_DIR/qc_report.html"
